{
	// Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"BEM__": {
		"scope": "scss",
		"prefix": "1",
		"body": [
			"&__${1:element}{"
			"\t${2:values}"
			"}"
			"$3"],
			"description": "&__"
		},
		"BEM-": {
			"prefix": "11",
			"body": [
				"&-${1:name}{"
				"\t${2:values}"
				"}"
				"$3"],
				"description": "&-"
			},
			"BEM--": {
				"prefix": "111",
		"body": [
		"&--${1:modifier}{"
		"\t${2:values}"
		"}"
		"$3"],
		"description": "&--"
	},
	"BEM:hover": {
		"prefix": "2",
		"body": [
		"&:${1|hover,has(),active,focus,nth-child(),not(),first-child(),last-child(),nth-of-type(),checked,enabled,disabled,nth-last-child()|}{"
		"\t${2:values}"
		"}"
		"$3"],
		"description": "&:hover"
	},
	"BEM::before": {
		"prefix": "3",
		"body": [
		"&::${1|before,after,first-line,first-letter,sellection,placeholder,backdrop,scrollbar,scrollbar-thumb,scrollbar-track|}{"
		"\tcontent: '';"
		"\tposition: absolute;;"
		"\ttop:0;"
		"\tleft:0;"
		"\twidth:100%;"
		"\theight:100%;"
		"\t${2:values}"
		"}"
		"$3"],
		"description": "&::before"
	},
	"reset": {
		"prefix": "reset",
		"body": [
		"*,*::before,*::after{" 
		"\tbox-sizing: border-box;" 
		"\tpadding: 0;"
		"\tmargin: 0;"
		"}"
		"html{"
		"\tscroll-behavior: smooth;"
		"\tfont-size: 62.5%;"
		"}"
		"body{"
		"\tfont-family: '$1', sans-serif;"
		"\t$2"
		"}"
		"$3"],
		"description": "starter"
	}
	
}
